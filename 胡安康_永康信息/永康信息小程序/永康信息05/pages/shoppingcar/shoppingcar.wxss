/* shoppingcar.wxss */
.icon {
    display: inline-block;
    vertical-align: middle;
}

.header {
    overflow: hidden;
    width: 100%;
    background-color: #E85436;
    height: 90rpx;
}

.header .header-left {
    float: left;
    padding: 24rpx 0;
    font-size: 14px;
    color: #fff;
}

.header .header-left .left-icon {
  margin: -0.1rem .2rem 0 .7rem;
  height:18px;
  width:18px;
  background: url(http://res.ivvke.com/image/mobile/shopcart/cart.png) no-repeat center 0/100% 100%;
}

.header .header-right {
    float: right;
    padding: 8px 0;
}

.header .header-right>span {
    margin: 0 1.2rem;
}

.header .header-right .goods-del {
    height: 20px;
    width: 20px;
    background: url("http://res.ivvke.com/image/mobile/shopcart/del.png") no-repeat center 0/100% 100%;
    margin-right: 35rpx;
}

.header .header-right .goods-del:active {
    background: url("http://res.ivvke.com/image/mobile/shopcart/del_active.png") no-repeat center 0/100% 100%;
}

#empty {
    display: none;
    text-align: center;
    margin-top: 50px;
} 
.cart_empty{
  display: block;
  width: 162px;
  height: 150px;
  margin: 0 auto;
}
.empty_text {
    color: #CFCFCF;
    font-size: 16px;
    line-height: 2.2rem;
    margin-top: 10px;
}
.go_main_btn{
    margin: 10% auto;
}

.go_main_btn>navigator{ 
  padding:15rpx 38rpx;
  text-align:center;
  font-size:15px;
  color:#fff;
  letter-spacing:1px;
  -webkit-border-radius:3px;
  -moz-border-radius:3px;
  border-radius:3px;
  background-color:#E85436;
  display:inline-block;
}

.goods-list {
    background-color: #F9F9F9;
}

.goods-detail {
    padding: 4.5% 0;
    width: 100%;
    overflow: hidden;
    box-sizing: border-box;
}

.goods-detail>view,.goods-detail>navigator {
    float: left;
}

.goods-select {
    margin: 5.2% 0 0 3%;
}

.goods-select>view.icon {
    height: 38rpx;
    width: 38rpx;
    background: url("http://res.ivvke.com/image/mobile/shopcart/select.png") no-repeat center 0/100% 100%;
}

.goods-select view.icon.selected {
    background: url("http://res.ivvke.com/image/mobile/shopcart/select_active.png") no-repeat center 0/100% 100%;
}

.goods-pic {
    margin-left: 2.3%;
    height: 120rpx;
    width: 120rpx;
    box-sizing: border-box;
    position: relative;
}
.goods-pic .deleted-tips{
  position:absolute;
  width:100%;
  height:35rpx;
  background-color:#a1a1a1;
  color:#fff;
  text-align:center;
  font-size:22rpx;
  left:0;
  bottom:0;
}
.goods-pic image {
    display: inline-block;
    width: 100%;
    height: 100%;
}

.goods-info {
    margin: 1.2% 0 0 3.5%;
    width: 40%;
    font-size: 27rpx
}

.goods-info>view {
    height: 38rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.goods-info .goods-name {
    color: #7D7D7D;
}

.goods-info .goods-spec {
    color: #A6A6A6;
}

.goods-info .goods-money {
    color: #E24058;
}

.goods-info .goods-money .new-money {
    color: #E63C54;
}

.goods-info .goods-money .old-money {
    color: #A6A6A6;
    font-size: .8rem;
    text-decoration: line-through;
}
.goods-detail.goods-deleted .goods-name, .goods-detail.goods-deleted .goods-spec, .goods-detail.goods-deleted .goods-money .new-money{
  color: #a1a1a1;
}
.goods-detail.goods-deleted .goods-number{
  opacity: 0.4;
}
.original-price{
  text-decoration:line-through;
  color: #d1d1d1;
  margin-left: 15rpx;
}
view.goods-number {
    width: 22.5%;
    margin: 5% 0 0 3.3%;
}

view.goods-number>view {
    float: left;
    display: inline-block;
    height: 54rpx;
    width: 54rpx;
}

view.goods-number view.minus {
    background: url("http://res.ivvke.com/image/mobile/shopcart/minus.png") no-repeat center 0/100% 100%;
}

view.goods-number view.minus:active {
    background: url("http://res.ivvke.com/image/mobile/shopcart/minus_active.png") no-repeat center 0/100% 100%;
}

view.goods-number view.count {
    background: url("http://res.ivvke.com/image/mobile/shopcart/count_bg.png") no-repeat center 0/100% 100%;
}

view.goods-number view.count input {
    margin-top: .4rpx;
    font-size: 27rpx;
    text-align: center;
    height: 46rpx;
    width: 54rpx;
    border: none;
    outline: none;
    -webkit-appearance: none;
}

view.goods-number view.plus {
    background: url("http://res.ivvke.com/image/mobile/shopcart/plus.png") no-repeat center 0/100% 100%;
}

view.goods-number view.plus:active {
    background: url("http://res.ivvke.com/image/mobile/shopcart/plus_active.png") no-repeat center 0/100% 100%;
}

.footer {
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    max-width: 800px;
    font-size: 28rpx;
    background-color: #fff;
    z-index:5;
}

.floor-1 {
    overflow: hidden;
    padding: 2.5% 0;
    border-top: .4rpx solid #D7D7D7;
}

.floor-1 .total-number {
    float: left;
    margin: 0 4%;
}

.floor-1 .total-number>text {
    color: #E63C54;
}

.floor-1 .total-money {
    float: right;
    margin-right: 3%;
}

.floor-1 .total-money>text {
    color: #E63C54;
}

.floor-2 {
    overflow: hidden;
    border-top: .4rpx solid #D7D7D7;
}

.floor-2 .goods-select {
    float: left;
    margin: 3.5% 0 0 3%;
}

.floor-2 .goods-select>view {
    margin-top: -0.8rpx;
}

.floor-2 .total-number {
    float: left;
    margin: 3% 0 0 33%;
}

.floor-2 .total-number>text {
    color: #E63C54;
}

.floor-2 .pay-btn {
    float: right;
    height: 84rpx;
    width: 202rpx;
    text-align: center;
    background-color: #FF5000;
}
.floor-2 .pay-btn #btn_pay {
    letter-spacing: 1px;
    color: #FEFFFF;
    display: inline-block;
    padding: 25rpx 0;
    line-height: 40rpx;
}
.floor-2 .pay-btn #btn_pay.disabled{
  background-color: #a1a1a1;
}

.floor-2 .pay-btn #btn_pay:active {
    background-color: #DB2E00;
    width: 100%;
}
