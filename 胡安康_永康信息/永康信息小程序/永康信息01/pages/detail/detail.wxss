/* detail.wxss */
.fixedcontainer {
  bottom: 130rpx;
}
.header-cont {
    background-color: #fff;
}
.index-banner{
	width: 100%;
	height: 562rpx;
}
.header-cont .detail-cont{padding: 0.5em 0.8em 0em;box-sizing: border-box;width: 100%;overflow: visible;}
.header-cont .detail-cont .name{
    color: #000;
    font-size: 17px;
    margin-bottom: 5px;
    line-height:23px;
}
.header-cont .item_price {font-size: 15px; font-weight: bold;margin-right: 25px;}
.header-cont .item_price_txt {background-color: #ff4500;color:#FFFFFF;margin: 0 8px;padding: 0 4px;font-size:12px}
.header-cont .express_money_show {color:#959595;font-size:12px;}
.header-cont .express_money_show del {color:#959595;}
.header-cont .payed_count {margin-top:5px;color:#959595;font-size: 12px;}
.header-cont .delivery_txt {float: right;}
.header-cont .slider_line{position: relative;line-height: 1em;height: 2em;box-sizing: border-box;width: 100%;overflow: visible;}
.header-cont .slider_line_con {border: 1px dashed #dfdfdf; display: inline-block;}
.header-cont .slider_line_left {margin-left:-0.8em; position:absolute;width:0.5em;height:1.2rem;left:0;top:0;}
.header-cont .slider_line_right {margin-right:-0.8em;position:absolute;top:0;right:0;width:0.5em;height:1.2rem;}
.header-cont .credit_con {margin-bottom:10px;font-size: 13px;}
.header-cont .credit_con image{width:22px;}
.microshop-box{margin: 10px 0;border-top: 1px solid #e0e0e0;border-bottom: 1px solid #e0e0e0;background-color: #fff;}
.microshop-box>view{line-height: 43px;font-size: 14px;}
.microshop-box .goto_shop{
  color: #515151;
}
.microshop-box .goto_shop image {width: 28px;height: 28px;    vertical-align: middle;}
.microshop-box .category_select image {width:8px}
.microshop-box{margin: 0.5em 0;padding: 0 0.8em;border-top: 1px solid #e0e0e0;border-bottom: 1px solid #e0e0e0;background-color: #fff;}

.buy_bar {clear:both; z-index:999;padding: 6px 0;position: fixed;width:100%;margin:0 auto;bottom: 0px;background-color: #f8f8f8;height:37px;border-top:1px solid #dfdfdf;}
.buy_bar>navigator,.buy_bar>view{ font-size: 15px; color:#FFFFFF; line-height:2.4em;display: -webkit-box; display: box; -webkit-box-orient: horizontal; height: 100%; display:inline-block;text-align: center;}
.buy_bar .custom_add_cart, .buy_bar .custom_add_cart_next { -webkit-border-radius: 4px; border-radius: 4px; background-color: #ff9400; margin-left:0.2em;}
.buy_bar .custom_add_cart_next{ float: right; margin-right:0.5em; display: none;}
.buy_bar .custom_buy_now_next{display: none;}
/* .buy_bar>a{ overflow:hidden; } */
.buy_bar .custom_buy_now, .buy_bar .custom_buy_now_next { -webkit-border-radius: 4px; border-radius: 4px; background-color: #ff460e;float:right;margin-right:0.5em;}
.buy_bar .custom_commission_now {background-color: #ff460e; margin-left: 28%;}
.buy_bar .custom_commission_share{background-color: #ff9400;margin-left: 28%;}

.buy_bar .backtohome{ display: inline-block; width: 42px; height: 100%; border-right: 1px solid #dfdfdf; 
	background-image: url(data:image/png;base64,); background-size: 30px; 
	background-position: 6px 3px; background-repeat: no-repeat; }
.buy_bar .backtohome:hover{ cursor: pointer; }
.mod_pop_mask{display: none;}
.control_tle, .control_inventory {height: 36px;line-height: 36px; }
.control_inventory{ float: right; color: #ff5000; }
#control_title,#control_count,#seller_info {margin: 10px 0;}
#control_count {padding: 0px 10px; overflow: hidden; }
.total_price_con {padding: 0 10px;}
#total_price_txt {margin-left: 20px;color: #ff5000;font-size: 20px;margin:10px 0;}
#control_stock {margin-left: 10px;font-size: 15px}
#control_btn,#enter_shop {height: 32px;line-height: 32px}
#control_sku {margin: 0 10px; padding-bottom: 3px;}
.sku_view_title {margin: 5px 0;}
#sku_view {border-bottom:1px solid #dfdfdf;padding-top: 10px;}
#sku_view:last-child{border:none;}
#sku_view view {margin:0 8px 5px 0;}
.category_goods { position: relative; height: 70px; margin-top: 10px; padding: 0 0.8em; border-bottom:1px solid #dfdfdf; overflow: hidden;display: flex; }
.category_goods .left_img{ width: 60px;height: 60px; }
.category_goods .left_img>image{ display: block;width: 100%; height: 120rpx;}
.category_goods .right_goods{flex: 1; margin: 3px 0 0 10px; }
.category_goods .right_goods .goods-name{ 
  width:520rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:block;
  max-height:34px;
  line-height:35rpx;
  font-size:14px;
  color: #515151;
 }
.category_goods .right_goods .price{ color: #ff5000;font-weight: bold;padding-top: 5px; }
.category_goods .close_icon{position:absolute;top:15px;right:10px;}
.category_goods .close_icon image{ width:20px; height: 20px;}
.category_main {position: fixed; width:100%; bottom: -200px; border-top: 1px solid #e0e0e0;
	border-bottom: 1px solid #e0e0e0;background-color: #fff;z-index:999;
  	transition: bottom 0.45s;
	-webkit-transition: bottom 0.45s; /* Safari 和 Chrome */
  }
.category_main>div {margin: 5px 0;}
.original-price{
  text-decoration:line-through;
}
/*==商品详情页面规格弹出框购买数量框==*/
#control_count .good_count_box{ float:left; margin-left: 5px; }
#control_count .good_count_box>view{ display: inline-block; float: left; list-style: none; width: 37px; height: 36px;
	line-height: 2.4em; text-align: center; -webkit-tap-highlight-color:rgba(255,255,255,0); -webkit-appearance: none; }
#good_sub{ background-image: url(http://res.ivvke.com/image/mobile/category.jpg); background-position: 0px 0px; }
.good_num{ background-image: url(http://res.ivvke.com/image/mobile/category.jpg); background-position: -35px 0px; }
.good_num input{ width: 37px; height: 33px; margin-left: 0px; margin-top: 1px; text-align: center;
	background-color: #fff; outline: none; border: none; -webkit-appearance: none; }
#good_add{ background-image: url(http://res.ivvke.com/image/mobile/category.jpg); background-position: -75px 0px; }

.step2 .mod_pop_mask{display: block;}
.step2 .category_main{display: block;bottom: 49px;}
.step2 .buy_bar .backtohome{display: none;}
.step2 .buy_bar .custom_buy_now{display: none;}
.step2 .buy_bar .custom_add_cart{display: none;}
.step2.onByNow .buy_bar .custom_buy_now_next{display: block;}

.step2.onAddCart .buy_bar .custom_add_cart_next{display: block;}


/*===信息提示框 ===*/
.infodialog-header{ position: relative; height: 34px; background-color: #FF4400; -webkit-user-select:none; }
.infodialog-header text{ color: #fff; padding-left: 10px; font-size: 1.4em; line-height: 2.1em; }
.infodialog-header .infodialog-close{ position: absolute; top: 5px; right: 5px; display: block;
	width: 23px; height: 23px; color: #fff; font-size: 2em; font-style: normal;
	line-height: 1em; text-align: center;}
.infodialog-header .infodialog-close:active{ background-color: #DAD8D9; outline: none; -webkit-tap-highlight-color:rgba(255,255,255,0); }
.infodialog-content{ padding-left: 15px; font-size: 1.3em; padding: 13px 12px; -webkit-user-select:none; }

.infodialog .btn-cont{ background-color: #EFEFEF; float: left; width: 100%; padding: 5px 0 4px 0;  }
.infodialog .btn-cont>navigator{  list-style: none; color: #fff; width: 47%; height: 30px; -webkit-tap-highlight-color:rgba(255,255,255,0);
	text-align: center; font-size: 1.25em; line-height: 2em; -webkit-user-select:none; }
.infodialog .btn-cont>navigator:nth-child(1){ background-color: #FF9302; float: left; margin-left: 5px; }
.infodialog .btn-cont>navigator:nth-child(2){ background-color: #FF5102; float: right; margin-right: 5px; }

.detail_decoration{
    position: relative;
    background-color: #f9f9f9;
}