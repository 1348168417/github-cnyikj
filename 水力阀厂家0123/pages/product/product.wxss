/* pages/remen/remen.wxss */

page {
  background: #edeae3;
}

.Box {
  padding: 0 10rpx;
}

.Box .typeTit {
  height: 100rpx;
  line-height: 100rpx;
  text-indent: 1em;
}

.listBox {
  width: 48%;
  margin: 20rpx 1%;
  float: left;
  background: white;
}

.listBox image {
  width: 100%;
}

.listBox .title{
  text-align: center;
  font-size: 15px;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 10rpx;
  white-space:nowrap; 
  text-overflow:ellipsis; 
  -o-text-overflow:ellipsis; 
  overflow: hidden;
}