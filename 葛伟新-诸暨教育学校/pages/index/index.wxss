/**index.wxss**/

.classify{
  margin: 30rpx 0;
}
.flex-wrp .flex-item{
  flex-grow: 1;
  text-align: center;
}
.flex-wrp .flex-item image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.flex-wrp .flex-item .text{
  font-size: 16px;
  margin-top: 20rpx;
  color:gray;
}
.recommendTil{
  height: 80rpx;
  background: #1296db;
  color: white;
  line-height: 80rpx;
  text-indent: 1em;
}
.goodsDetails{
  padding: 20rpx;
  border-bottom: 1rpx solid gray;
  position: relative;
}
.goodsDetails image{
  width: 200rpx;
  height: 200rpx;
}
.goodsDetails .type{
  position: absolute;
  left: 20rpx;
  bottom: 28rpx;
  width: 200rpx;
  height: 50rpx;
  background: rgba(0, 0, 0, 0.6);
  color: white;
  text-align: center;
  line-height: 50rpx;
}
.goodsDetails .name{
  position: absolute;
  left: 250rpx;
  top:30rpx;
  font-size: 14px;
  line-height: 44rpx;
  color: #8a8a8a;
}
.recommend .explain{
  padding: 30rpx;
  font-size: 16px;
  line-height: 46rpx;
  color: #8a8a8a;
}
.recommend .explain text{
  color: #d4237a;
  font-weight: 600;
}



.Box{
  background-color: #ccc;
}
.Box image{
  width: 100%;
  height: 210px;
}


.order {  
   height: 40px;  
   line-height: 40px;  
   text-align: center;  
}  
 .order .line {  
   display: inline-block;  
   width: 40%;  
   border-top: 2px solid #fff ;  
}  
.order .txt {  
   color: #686868;  
   vertical-align: middle;  
}  


/*底部  */
.tapbar{
  font-size: 20rpx;
  background-color: #aaa;
  color: #fff;
  text-align: center;
  border-radius: 20rpx;
  margin: 10rpx;
}
.tapbar image{
  width: 280rpx;
  height: 80rpx;
}
