<view class="about_page">
  <view>

    <view class='about_image'>
      <image class='about_logo' src='../../images/logo.jpg'></image>
    </view>
    <view class='about_word'>
      <view bindtap="about_gaiya">关于盖亚>></view>
      <view bindtap="about_people">主要成员>></view>
    </view>

    <view class='about_call'>
